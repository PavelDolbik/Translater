<resources>


    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>


    <style name="ToolbarTextViewStyle" parent="android:Widget.TextView">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="TranslateEditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:maxHeight">100dp</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">5dp</item>
        <item name="android:hint">@string/tf_hint</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">1dp</item>
        <item name="android:scrollbarThumbVertical">@color/colorAccent</item>
        <item name="android:background">@null</item>
    </style>


</resources>
